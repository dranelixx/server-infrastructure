# Proxmox API Configuration
# Copy this file to terraform.tfvars and fill in your credentials
# NEVER commit terraform.tfvars to Git!

proxmox_api_url = "https://10.0.1.10:8006/api2/json"

# Option 1: API Token Authentication (Recommended)
proxmox_api_token_id     = "root@pam!terraform"
proxmox_api_token_secret = "YOUR-API-TOKEN-HERE"

# Option 2: Username/Password Authentication
# proxmox_user     = "root@pam"
# proxmox_password = "YOUR-PASSWORD-HERE"

# TLS Settings
proxmox_tls_insecure = true  # Set to false in production with valid certs
